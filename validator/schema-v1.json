{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://github.com/newrelic/nri-integration-definitions/schema-v1.json",
  "title": "Infra integration definitions",
  "type": "object",
  "required": [
    "service",
    "display_name",
    "entities"
  ],
  "properties": {
    "provider": {
      "type": "string",
      "minLength": 3
    },
    "service": {
      "type": "string",
      "minLength": 2
    },
    "display_name": {
      "type": "string",
      "minLength": 2
    },
    "entities": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "name",
          "metrics"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "properties": {
            "type": "object",
            "properties": {
              "namespace": {
                "type": "string"
              },
              "dimensions": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "metrics": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "required": [
                "provider_name",
                "description"
              ],
              "properties": {
                "provider_name": {
                  "type": "string"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "gauge","Gauge",
                    "count","Count","counter","Counter",
                    "summary"
                  ]
                },
                "unit": {
                  "type": "string",
                  "enum": [
                    "count",
                    "percent",
                    "ratio",
                    "seconds",
                    "centiseconds",
                    "milliseconds",
                    "microseconds",
                    "nanoseconds",
                    "bytes",
                    "kilobytes",
                    "kilobytesPerSecond",
                    "megabytes",
                    "bytesPerSecond",
                    "bitsPerSecond",
                    "megabytesPerSecond",
                    "megabytesPerMillisecond",
                    "countPerSecond",
                    "countPerMinute",
                    "gigabytesPerSecond",
                    "gibibytes",
                    "mebibytes",
                    "dbm",
                    "gigabytes",
                    "terabytes",
                    "megahertz",
                    "watt",
                    "joule",
                    "other"
                  ]
                },
                "description": {
                  "type": "string"
                }
              },
              "anyOf": [
                {
                  "required":["unit"]
                 },
                 {
                  "required": ["type"]
                 }
              ]
            }
          }
        }
      }
    }
  }
}